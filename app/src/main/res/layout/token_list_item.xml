<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="300dp"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/token_serial_no"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="No.23"
                android:textSize="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/patient_name"
                android:layout_width="match_parent"
                android:text="Patient name"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/patient_phone_no"
                android:layout_width="match_parent"
                android:text="Patient phone number"
                android:gravity="center"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/token_status"
            android:layout_width="match_parent"
            android:text="token status"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/patient_reason"
            android:layout_width="match_parent"
            android:text="patient reason"
            android:gravity="center"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:id="@+id/completed_btn"
                android:layout_width="wrap_content"
                android:text="complete"
                android:layout_height="wrap_content"

                />
            <Button
                android:id="@+id/delete"
                android:text="delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />
            <Button
                android:id="@+id/push_back"
                android:text="Push to queue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>